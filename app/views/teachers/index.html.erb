<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>

<!-- 検索フォームの追加 -->
<%= form_for @search_form, as: 'search', url: :teachers, html: {method: :get} do |f| %>
<%= f.label :teacher_name, "教員名" %>
<%= f.text_field :teacher_name %>
<%= f.submit "検索" %>
<% end %><br>
<!-- ここまで -->


<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>教員名</th>
      <th>所属学部</th>
      <th>所属学科</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.name, teacher %></td>
        <td><%= GakubuList.find(teacher.gakubu).name %></td>
        <td><%= GakkaList.find(teacher.gakka).name %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>
